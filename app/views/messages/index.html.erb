<h1>Message Board</h1>
<%= @submit %>
<%= form_with model: @message, id:"message_form" do |form|%>
  <h3>Message</h3>
  <%= form.text_field :name, id: "add_name", placeholder: "Your Name", required: "required" %>
  <br>
  <%= form.text_area :content, size: "70x10", id: "message", placeholder: "Your Message", required: "required" %>
  <br>
  <%= form.submit id: "submit"%>
<% end %>
<br>
<% @messages.each do | message | %>
  <div class="message_contents">
    <p class="message_name"><%= message.name %> said,</p>
    <p class="message_content"><%=message.content %></p>
    <p class="message_time"><%=message.created_at %></p>
  </div>
<% end %>
