<h1>Login</h1>

    <div class="flex_container">
        <%= form_tag '/login' do %>
            <div class="user_typ">

                <%= label_tag :username %>

                <%= text_field_tag :username %>
          
                <br>
                <br>

                <%= label_tag :password %>

                <%= password_field_tag :password %>

                <br><br>

                <%= submit_tag "Login", class: "btn btn-secondary"%>
            
            </div>
            
        <% end %>
    </div>
